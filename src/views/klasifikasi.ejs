        <!-- JavaScript for Frontend Integration -->
        <script>
            const hamburger = document.getElementById('hamburger');
            const navMenu = document.getElementById('nav-menu');
            const fileInput = document.getElementById('file-upload');
            const uploadText = document.getElementById('upload-text');
            const uploadIcon = document.getElementById('upload-icon');
            const uploadSpinner = document.getElementById('upload-spinner');
            const processBtn = document.getElementById('process-btn');
            const processText = document.getElementById('process-text');
            const processSpinner = document.getElementById('process-spinner');
            const uploadSection = document.getElementById('upload-section');
            const processingSection = document.getElementById('processing-section');
            const resultsSection = document.getElementById('results-section');
            const fileNameDisplay = document.getElementById('file-name');
            const step1 = document.getElementById('step1');
            const step2 = document.getElementById('step2');
            const step3 = document.getElementById('step3');
            const progressBar = document.getElementById('progress-bar');
            const errorMessage = document.getElementById('error-message');
            const resultsTbody = document.getElementById('results-tbody');
            const resultCount = document.getElementById('result-count');
            const downloadBtn = document.getElementById('download-btn');

            // Hamburger menu toggle
            hamburger.addEventListener('click', () => {
                navMenu.classList.toggle('hidden');
            });

            // File input change handler
            fileInput.addEventListener('change', (event) => {
                const file = event.target.files[0];
                if (file) {
                    // Show spinner
                    uploadIcon.classList.add('hidden');
                    uploadSpinner.classList.add('active');
                    uploadSpinner.classList.remove('hidden');

                    // Simulate short delay for spinner
                    setTimeout(() => {
                        // Hide spinner, show check icon
                        uploadSpinner.classList.remove('active');
                        uploadSpinner.classList.add('hidden');
                        uploadIcon.classList.remove('hidden');
                        uploadIcon.classList.remove('fa-file-excel');
                        uploadIcon.classList.add('fa-check', 'text-green-500');

                        // Update text
                        uploadText.textContent = `File terpilih: ${file.name}`;
                        processBtn.disabled = false;
                        errorMessage.style.display = 'none';
                    }, 500);
                } else {
                    // Reset to initial state
                    uploadIcon.classList.remove('hidden', 'fa-check', 'text-green-500');
                    uploadIcon.classList.add('fa-file-excel', 'text-[#0174BE]');
                    uploadSpinner.classList.remove('active');
                    uploadSpinner.classList.add('hidden');
                    uploadText.textContent = 'Klik untuk memilih file Excel atau drag & drop';
                    processBtn.disabled = true;
                }
            });

            // Process button click handler
            processBtn.addEventListener('click', async () => {
                const file = fileInput.files[0];
                if (!file) {
                    errorMessage.textContent = 'Harap pilih file Excel terlebih dahulu';
                    errorMessage.style.display = 'block';
                    return;
                }

                // Show spinner on process button
                processText.textContent = 'Memproses...';
                processSpinner.classList.remove('hidden');
                processBtn.disabled = true;

                // Show processing section
                uploadSection.classList.add('hidden');
                processingSection.classList.remove('hidden');
                fileNameDisplay.textContent = `Menganalisis ${file.name}...`;

                // Update stepper
                step1.classList.remove('active-step', 'text-white');
                step1.classList.add('completed', 'text-white');
                step1.innerHTML = '<i class="fas fa-check"></i>';
                step2.classList.add('active-step', 'text-white');
                step2.classList.remove('border-2', 'border-[#0c3a6e]', 'text-[#0c3a6e]');

                // Simulate progress bar
                let progress = 0;
                progressBar.value = 0;
                const progressInterval = setInterval(() => {
                    progress += 1;
                    progressBar.value = progress;
                    if (progress >= 100) {
                        clearInterval(progressInterval);
                    }
                }, 50);

                // Send file to backend
                const formData = new FormData();
                formData.append('excelFile', file);

                try {
                    const response = await fetch('/layanan/klasifikasi', {
                        method: 'POST',
                        body: formData,
                    });

                    const result = await response.json();

                    clearInterval(progressInterval);
                    progressBar.value = 100;

                    // Hide process spinner
                    processText.textContent = 'Mulai Proses Analisis';
                    processSpinner.classList.add('hidden');
                    processBtn.disabled = false;

                    if (!result.success) {
                        throw new Error(result.message || 'Gagal memproses file');
                    }

                    // Show results section
                    processingSection.classList.add('hidden');
                    resultsSection.classList.remove('hidden');

                    // Update stepper
                    step2.classList.remove('active-step', 'text-white');
                    step2.classList.add('completed', 'text-white');
                    step2.innerHTML = '<i class="fas fa-check"></i>';
                    step3.classList.add('active-step', 'text-white');
                    step3.classList.remove('border-2', 'border-[#0c3a6e]', 'text-[#0c3a6e]');

                    // Populate results table
                    const classifications = result.data.slice(0, 5); // Show top 5
                    resultCount.textContent = classifications.length;
                    resultsTbody.innerHTML = '';

                    classifications.forEach((cls, index) => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td data-label="ID" class="font-bold">${index + 1}</td>
                            <td data-label="Nilai Sikap">${cls.n_sikap_a}</td>
                            <td data-label="Nilai Kejuruan">${cls.n_kejuruan.toFixed(2)}</td>
                            <td data-label="Pekerjaan Ibu: Lainnya">${cls.mother_work_lainnya}</td>
                            <td data-label="Nilai Matematika">${cls.n_mat.toFixed(2)}</td>
                            <td data-label="Nilai PPKn">${cls.n_por.toFixed(2)}</td>
                            <td data-label="Nilai Agama">${cls.n_agama.toFixed(2)}</td>
                            <td data-label="Nilai Bahasa Jawa">${cls.n_bjawa.toFixed(2)}</td>
                            <td data-label="Gaji Ibu Sangat Rendah">${cls.mother_salary_sangat_rendah}</td>
                            <td data-label="Ayah Tidak Berpenghasilan">${cls.father_salary_tidak_berpenghasilan}</td>
                            <td data-label="Nilai Bahasa Indonesia">${cls.n_bindo.toFixed(2)}</td>
                            <td data-label="Tidak Ikut Ekstrakurikuler">${cls.extracurricular_tidak}</td>
                            <td data-label="Pendidikan Ayah SMP">${cls.father_edu_smp_sederajat}</td>
                            <td data-label="Pekerjaan Ayah Buruh">${cls.father_work_buruh}</td>
                            <td data-label="Gaji Ibu Cukup Rendah">${cls.mother_salary_cukup_rendah}</td>
                            <td data-label="Pekerjaan Ibu Buruh">${cls.mother_work_buruh}</td>
                            <td data-label="Prediksi Skor Akhir">${cls.Predicted_Final_Score}</td>
                        `;
                        resultsTbody.appendChild(row);
                    });

                } catch (error) {
                    clearInterval(progressInterval);
                    processText.textContent = 'Mulai Proses Analisis';
                    processSpinner.classList.add('hidden');
                    processBtn.disabled = false;

                    processingSection.classList.add('hidden');
                    uploadSection.classList.remove('hidden');
                    errorMessage.textContent = error.message.includes('Missing required columns')
                        ? `File Excel tidak valid: ${error.message}. Harap gunakan template yang disediakan.`
                        : 'Terjadi kesalahan saat memproses file. Pastikan file sesuai dengan template.';
                    errorMessage.style.display = 'block';

                    // Reset stepper
                    step1.classList.add('active-step', 'text-white');
                    step1.classList.remove('completed');
                    step1.innerHTML = '1';
                    step2.classList.remove('active-step', 'text-white');
                    step2.classList.add('border-2', 'border-[#0c3a6e]', 'text-[#0c3a6e]');
                    step2.innerHTML = '2';
                    step3.classList.remove('active-step', 'text-white');
                    step3.classList.add('border-2', 'border-[#0c3a6e]', 'text-[#0c3a6e]');
                    step3.innerHTML = '3';
                }
            });

            // Download button click handler
            downloadBtn.addEventListener('click', async () => {
                try {
                    const response = await fetch('/layanan/klasifikasi/download');
                    if (!response.ok) {
                        const result = await response.json();
                        throw new Error(result.message || 'Gagal mengunduh file');
                    }
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'student_classifications.xlsx';
                    document.body.appendChild(a);
                    a.click();
                    a.remove();
                    window.URL.revokeObjectURL(url);
                } catch (error) {
                    errorMessage.textContent = error.message || 'Gagal mengunduh file hasil klasifikasi';
                    errorMessage.style.display = 'block';
                }
            });
        </script>
    </div>
