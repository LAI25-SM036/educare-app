<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Lobster&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <script src="https://cdn.jsdelivr.net/npm/heroicons@1.0.6/umd/heroicons.min.js"></script>
    <title>Kalkulator Pajak - Mind Care</title>
    <style>
      body {
        font-family: "Poppins", sans-serif;
      }

      .mindcare-font {
        font-family: "Lobster", sans-serif;
        font-weight: 400;
        font-style: normal;
      }

      /* Custom style untuk input */
      input,
      select {
        transition: all 0.2s ease-in-out;
      }

      input:disabled,
      select:disabled {
        cursor: not-allowed;
      }
    </style>
  </head>

  <body class="bg-gray-100 font-sans">
    <div class="flex flex-col min-h-screen">
      <!-- Header -->
      <header
        class="bg-gradient-to-r from-[#182233] to-[#005D69] text-white py-3 sm:py-4"
      >
        <div
          class="container mx-auto px-4 sm:px-6 flex items-center space-x-3 sm:space-x-4"
        >
          <!-- <img src="img/logo.png" alt="Logo Mind Care" class="w-12 h-12 sm:w-16 sm:h-16 rounded-full"> -->
          <h1
            class="text-xl sm:text-2xl md:text-3xl font-semibold mindcare-font"
          >
            Kalkulator Pajak
          </h1>
        </div>
      </header>

      <!-- Form Kalkulator -->
      <div
        class="container mx-auto px-4 sm:px-6 py-6 sm:py-8 flex-grow pb-24 sm:pb-24 md:pb-2"
      >
        <form
          class="bg-white p-4 sm:p-6 rounded-3xl shadow-xl max-w-3xl mx-auto space-y-6 mb-1 sm:mb-24 md:mb-28"
        >
          <!-- Informasi Pribadi -->
          <div class="border border-gray-200 rounded-lg p-4 sm:p-6 space-y-4">
            <h2 class="text-lg font-semibold text-[#005D69]">
              Informasi Pribadi
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <!-- Status Kawin -->
              <div>
                <label
                  for="status-kawin"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Status Kawin</label
                >
                <select
                  id="status-kawin"
                  name="status-kawin"
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 shadow-sm focus:border-[#005D69] focus:ring-2 focus:ring-[#005D69] text-sm"
                >
                  <option value="TK">TK (Tidak Kawin)</option>
                  <option value="K">K (Kawin)</option>
                  <option value="HB">HB (Hidup Berpisah)</option>
                </select>
              </div>

              <!-- Tanggungan -->
              <div>
                <label
                  for="tanggungan"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Tanggungan</label
                >
                <select
                  id="tanggungan"
                  name="tanggungan"
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 shadow-sm focus:border-[#005D69] focus:ring-2 focus:ring-[#005D69] text-sm"
                >
                  <option value="0">0</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                </select>
              </div>

              <!-- Masa Penghasilan -->
              <div>
                <label
                  for="masa-penghasilan"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Masa Penghasilan</label
                >
                <select
                  id="masa-penghasilan"
                  name="masa-penghasilan"
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 shadow-sm focus:border-[#005D69] focus:ring-2 focus:ring-[#005D69] text-sm"
                >
                  <option value="januari">Januari</option>
                  <option value="februari">Februari</option>
                  <option value="maret">Maret</option>
                  <option value="april">April</option>
                  <option value="mei">Mei</option>
                  <option value="juni">Juni</option>
                  <option value="juli">Juli</option>
                  <option value="agustus">Agustus</option>
                  <option value="september">September</option>
                  <option value="oktober">Oktober</option>
                  <option value="november">November</option>
                  <option value="desember">Desember</option>
                </select>
              </div>

              <!-- Status Masuk -->
              <div>
                <label
                  for="status-masuk"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Status Masuk</label
                >
                <input
                  type="text"
                  id="status-masuk"
                  name="status-masuk"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  value="Otomatis"
                />
              </div>

              <!-- Tunjangan Pajak -->
              <div>
                <label
                  for="tunjangan-pajak"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Tunjangan Pajak</label
                >
                <select
                  id="tunjangan-pajak"
                  name="tunjangan-pajak"
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 shadow-sm focus:border-[#005D69] focus:ring-2 focus:ring-[#005D69] text-sm"
                >
                  <option value="gross">Gross</option>
                  <option value="gross-up">Gross Up</option>
                </select>
              </div>

              <!-- Ketentuan PTKP -->
              <div>
                <label
                  for="ketentuan-ptkp"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Ketentuan PTKP</label
                >
                <input
                  type="text"
                  id="ketentuan-ptkp"
                  name="ketentuan-ptkp"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  value="Berdasarkan Status"
                />
              </div>
            </div>
          </div>

          <!-- Penghasilan -->
          <div class="border border-gray-200 rounded-lg p-4 sm:p-6 space-y-4">
            <h2 class="text-lg font-semibold text-[#005D69]">A. Penghasilan</h2>
            <div class="grid grid-cols-1 gap-4">
              <div>
                <label
                  for="gaji"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Gaji/Pensiun atau THT/JHT</label
                >
                <input
                  type="number"
                  id="gaji"
                  name="gaji"
                  min="0"
                  step="1"
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 shadow-sm focus:border-[#005D69] focus:ring-2 focus:ring-[#005D69] text-sm"
                  placeholder="Masukkan jumlah"
                />
              </div>
              <div>
                <label
                  for="tunjangan-pph"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Tunjangan PPh</label
                >
                <input
                  type="number"
                  id="tunjangan-pph"
                  name="tunjangan-pph"
                  min="0"
                  step="1"
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 shadow-sm focus:border-[#005D69] focus:ring-2 focus:ring-[#005D69] text-sm"
                  placeholder="Masukkan jumlah"
                />
              </div>
              <div>
                <label
                  for="tunjangan-lain"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Tunjangan Lainnya, Uang Lembur, dsb</label
                >
                <input
                  type="number"
                  id="tunjangan-lain"
                  name="tunjangan-lain"
                  min="0"
                  step="1"
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 shadow-sm focus:border-[#005D69] focus:ring-2 focus:ring-[#005D69] text-sm"
                  placeholder="Masukkan jumlah"
                />
              </div>
              <div>
                <label
                  for="honorarium"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Honorarium dan Imbalan Lainnya</label
                >
                <input
                  type="number"
                  id="honorarium"
                  name="honorarium"
                  min="0"
                  step="1"
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 shadow-sm focus:border-[#005D69] focus:ring-2 focus:ring-[#005D69] text-sm"
                  placeholder="Masukkan jumlah"
                />
              </div>
              <div>
                <label
                  for="premi-asuransi"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Premi Asuransi yang Dibayar Pemberi Kerja</label
                >
                <input
                  type="number"
                  id="premi-asuransi"
                  name="premi-asuransi"
                  min="0"
                  step="1"
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 shadow-sm focus:border-[#005D69] focus:ring-2 focus:ring-[#005D69] text-sm"
                  placeholder="Masukkan jumlah"
                />
              </div>
              <div>
                <label
                  for="natura"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Natura dan Kenikmatan Lainnya</label
                >
                <input
                  type="number"
                  id="natura"
                  name="natura"
                  min="0"
                  step="1"
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 shadow-sm focus:border-[#005D69] focus:ring-2 focus:ring-[#005D69] text-sm"
                  placeholder="Masukkan jumlah"
                />
              </div>
              <div>
                <label
                  for="bonus"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Tantiem, Bonus, Gratifikasi, Jasa Produksi, THR</label
                >
                <input
                  type="number"
                  id="bonus"
                  name="bonus"
                  min="0"
                  step="1"
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 shadow-sm focus:border-[#005D69] focus:ring-2 focus:ring-[#005D69] text-sm"
                  placeholder="Masukkan jumlah"
                />
              </div>
              <div>
                <label
                  for="penghasilan-bruto"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Penghasilan Bruto</label
                >
                <input
                  type="number"
                  id="penghasilan-bruto"
                  name="penghasilan-bruto"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  placeholder="Otomatis dihitung"
                />
              </div>
            </div>
          </div>

          <!-- Pengurangan -->
          <div class="border border-gray-200 rounded-lg p-4 sm:p-6 space-y-4">
            <h2 class="text-lg font-semibold text-[#005D69]">B. Pengurangan</h2>
            <div class="grid grid-cols-1 gap-4">
              <div>
                <label
                  for="biaya-jabatan"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Biaya Jabatan</label
                >
                <input
                  type="number"
                  id="biaya-jabatan"
                  name="biaya-jabatan"
                  min="0"
                  step="1"
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 shadow-sm focus:border-[#005D69] focus:ring-2 focus:ring-[#005D69] text-sm"
                  placeholder="Masukkan jumlah"
                />
              </div>
              <div>
                <label
                  for="iuran-pensiun"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Iuran Pensiun atau THT/JHT</label
                >
                <input
                  type="number"
                  id="iuran-pensiun"
                  name="iuran-pensiun"
                  min="0"
                  step="1"
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 shadow-sm focus:border-[#005D69] focus:ring-2 focus:ring-[#005D69] text-sm"
                  placeholder="Masukkan jumlah"
                />
              </div>
            </div>
          </div>

          <!-- Penghitung PPh Pasal 21 -->
          <div class="border border-gray-200 rounded-lg p-4 sm:p-6 space-y-4">
            <h2 class="text-lg font-semibold text-[#005D69]">
              C. Penghitung PPh Pasal 21
            </h2>
            <div class="grid grid-cols-1 gap-4">
              <div>
                <label
                  for="penghasilan-bruto-setahun"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Penghasilan Bruto Setahun</label
                >
                <input
                  type="number"
                  id="penghasilan-bruto-setahun"
                  name="penghasilan-bruto-setahun"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  placeholder="Otomatis dihitung"
                />
              </div>
              <div>
                <label
                  for="biaya-jabatan-setahun"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Biaya Jabatan Setahun</label
                >
                <input
                  type="number"
                  id="biaya-jabatan-setahun"
                  name="biaya-jabatan-setahun"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  placeholder="Otomatis dihitung"
                />
              </div>
              <div>
                <label
                  for="iuran-pensiun-setahun"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Iuran Pensiun Setahun</label
                >
                <input
                  type="number"
                  id="iuran-pensiun-setahun"
                  name="iuran-pensiun-setahun"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  placeholder="Otomatis dihitung"
                />
              </div>
              <div>
                <label
                  for="jumlah-pengurang"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Jumlah Pengurang</label
                >
                <input
                  type="number"
                  id="jumlah-pengurang"
                  name="jumlah-pengurang"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  placeholder="Otomatis dihitung"
                />
              </div>
              <div>
                <label
                  for="penghasilan-neto"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Penghasilan Neto</label
                >
                <input
                  type="number"
                  id="penghasilan-neto"
                  name="penghasilan-neto"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  placeholder="Otomatis dihitung"
                />
              </div>
              <div>
                <label
                  for="penghasilan-neto-sebelumnya"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Penghasilan Neto Masa Sebelumnya</label
                >
                <input
                  type="number"
                  id="penghasilan-neto-sebelumnya"
                  name="penghasilan-neto-sebelumnya"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  placeholder="Otomatis dihitung"
                />
              </div>
              <div>
                <label
                  for="penghasilan-neto-setahun"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Penghasilan Neto Setahun/Disetahunkan</label
                >
                <input
                  type="number"
                  id="penghasilan-neto-setahun"
                  name="penghasilan-neto-setahun"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  placeholder="Otomatis dihitung"
                />
              </div>
              <div>
                <label
                  for="ptkp"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Penghasilan Tidak Kena Pajak</label
                >
                <input
                  type="number"
                  id="ptkp"
                  name="ptkp"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  placeholder="Otomatis dihitung"
                />
              </div>
              <div>
                <label
                  for="pkp-setahun"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >PKP Setahun/Disetahunkan</label
                >
                <input
                  type="number"
                  id="pkp-setahun"
                  name="pkp-setahun"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  placeholder="Otomatis dihitung"
                />
              </div>
              <div>
                <label
                  for="pph-atas-pkp"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >PPh Pasal 21 atas PKP</label
                >
                <input
                  type="number"
                  id="pph-atas-pkp"
                  name="pph-atas-pkp"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  placeholder="Otomatis dihitung"
                />
              </div>
              <div>
                <label
                  for="pph-dipotong-sebelumnya"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >PPh Pasal 21 Dipotong Masa Sebelumnya</label
                >
                <input
                  type="number"
                  id="pph-dipotong-sebelumnya"
                  name="pph-dipotong-sebelumnya"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  placeholder="Otomatis dihitung"
                />
              </div>
              <div>
                <label
                  for="pph-terutang-setahun"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >PPh Pasal 21 Terutang Setahun/Disetahunkan</label
                >
                <input
                  type="number"
                  id="pph-terutang-setahun"
                  name="pph-terutang-setahun"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  placeholder="Otomatis dihitung"
                />
              </div>
              <div>
                <label
                  for="pph-terutang-sebulan"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >PPh Pasal 21 Terutang Sebulan</label
                >
                <input
                  type="number"
                  id="pph-terutang-sebulan"
                  name="pph-terutang-sebulan"
                  disabled
                  class="block w-full h-10 px-3 rounded-lg border-gray-300 bg-gray-100 text-gray-500 text-sm cursor-not-allowed"
                  placeholder="Otomatis dihitung"
                />
              </div>
            </div>
          </div>

          <!-- Tombol Hitung -->
          <div class="flex justify-end">
            <button
              type="button"
              class="bg-gradient-to-r from-[#182233] to-[#005D69] text-white px-6 py-2.5 sm:py-2 rounded-lg shadow-md hover:bg-[#005D69] focus:outline-none focus:ring-2 focus:ring-[#005D69] text-sm sm:text-base"
            >
              Hitung
            </button>
          </div>
        </form>
      </div>

      <!-- Bottom Navigation -->
    <div class="bg-white p-4 shadow-lg fixed bottom-0 w-full z-10 md:hidden">
