  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to right, #FFF0CE, #fefaf1);
    }

    .animate-slide-in {
      animation: slideIn 0.5s ease-out;
    }

    .animate-scale-in {
      animation: scaleIn 0.7s ease-out;
    }

    .animate-fade-in {
      animation: fadeIn 0.8s ease-out;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes scaleIn {
      from {
        opacity: 0;
        transform: scale(0.8);
      }

      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }

      to {
        opacity: 1;
      }
    }
  </style>
</head>

